<h4>{{ 'customer.edit_profile.title' | t }}</h4>
<form ng-submit="$ctrl.submit()" name="detailForm">
    <label for="first_name" class="hidden-label">{{ 'customer.edit_profile.first_name' | t }}</label>
    <input ng-model="$ctrl.data.changeData.firstName" name="firstName" id="first_name" type="text" placeholder="{{ 'customer.edit_profile.first_name' | t }}" autocapitalize="words" autofocus=""/>

    <label for="last_name" class="hidden-label">{{ 'customer.edit_profile.last_name' | t }}</label>
    <input ng-model="$ctrl.data.changeData.lastName" name="lastName" id="last_name" type="text" placeholder="{{ 'customer.edit_profile.last_name' | t }}" autocapitalize="words"/>

    <label for="email" class="hidden-label">{{ 'customer.edit_profile.email' | t }}</label>
    <input ng-model="$ctrl.data.changeData.email" name="email" id="email" type="email" placeholder="{{ 'customer.edit_profile.email' | t }}" autocorrect="off" autocapitalize="off"/>

    <div class="text-center">
        <input type="submit" class="btn" ng-class="{ 'btn--disabled': detailForm.$pristine, 'btn--loading': $ctrl.loading }" value="{{ 'customer.edit_profile.submit' | t }}" ng-disabled="$ctrl.loading"/>
    </div>
</form>